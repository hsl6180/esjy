@import '../../../style/weda-ui.wxss';
.weda-uploader-files {
  width: 100%;
  background-color: #f6f6f6;
}
.weda-uploader-files__hd {
  width: 100%;
  padding: 24px 20px 8px 20px;
  display: flex;
  background-color: #ffffff;
}

.weda-uploader-files__btn::after {
  border: 1px solid #dcdcdc;
  border-radius: 3px;
  width: 100%;
  height: 100%;
  transform: none;
}
.weda-uploader-files__title {
  font-size: 14px;
  line-height: 20px;
  color: #000;
  margin-right: 20px;
  padding-top: 6px;
}
.weda-uploader-files__btn {
  margin: 0;
  width: 88px;
  height: 32px;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  line-height: 22px;
  color: #000;
  border: 1px solid #dcdcdc;
  border-radius: 3px;
  font-weight: normal;
  background-color: transparent;
}
.weda-uploader-files__tips {
  margin-top: 8px;
  font-size: 12px;
  line-height: 20px;
  color: rgba(0, 0, 0, 0.4);
}
.weda-uploader-files__item {
  width: 100%;
  margin-top: 8px;
  padding: 16px;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.weda-uploader-files__item-left {
  flex: 1;
  margin-right: 16px;
}
.weda-uploader-files__file-detail {
  display: flex;
  align-items: center;
}
.weda-uploader-files__file-name {
  font-size: 14px;
  line-height: 22px;
  color: rgba(0, 0, 0, 0.9);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 200px;
}
.weda-uploader-files__file-status {
  margin-left: 24px;
  width: 28%;
}
.weda-uploader-files__file-status--msg {
  margin-left: 4px;
  font-size: 12px;
  line-height: 20px;
  color: rgba(0, 0, 0, 0.9);
}
.weda-uploader-files__file-foot {
  font-size: 12px;
  line-height: 20px;
  color: rgba(0, 0, 0, 0.4);
  margin-top: 8px;
  display: flex;
  justify-content: space-between;
}
.weda-uploader-files__btn-group {
  display: flex;
}
.weda-uploader-files__icon {
  width: 24px;
  height: 24px;
}
.weda-uploader-files__icon + .weda-uploader-files__icon {
  margin-left: 16px;
}
.weda-uploader-files__progress {
  margin-top: 4px;
}
